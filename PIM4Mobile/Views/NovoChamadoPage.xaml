<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PIM4Mobile.Views.NovoChamadoPage"
             Title="Novo Chamado">
    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">
            <Label Text="Título do Chamado" FontSize="Medium" />
            <Entry x:Name="TxtTitulo" Placeholder="Ex: Problema com a internet" />

            <Label Text="Descrição" FontSize="Medium" />
            <Editor x:Name="TxtDescricao" Placeholder="Detalhe o problema ou solicitação aqui..." AutoSize="TextChanges" HeightRequest="100" />

            <Label Text="Categoria" FontSize="Medium" />
            <Picker x:Name="CategoryPicker" Title="Selecione da categoria..." />

            <Button x:Name="BtnAbrirChamado" 
                    Text="Enviar Chamado" 
                    Clicked="OnEnviarChamadoClicked" 
                    HorizontalOptions="Fill" />

            <ActivityIndicator x:Name="LoadingIndicator" IsRunning="False" IsVisible="False" Color="Blue" />
            <Label x:Name="ResultLabel" Text="" HorizontalOptions="Center" FontSize="Small" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>