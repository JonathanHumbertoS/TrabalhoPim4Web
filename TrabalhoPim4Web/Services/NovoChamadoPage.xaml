<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SeuProjetoMobile.Views.NovoChamadoPage"
             Title="Novo Chamado">
    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">

            <Label Text="Título do Chamado" FontSize="Medium" />
            <Entry x:Name="TitleEntry" Placeholder="Ex: Problema com a internet" />

            <Label Text="Descrição" FontSize="Medium" Margin="0,10,0,0" />
            <Editor x:Name="DescriptionEditor" Placeholder="Detalhe o problema ou solicitação aqui..." HeightRequest="100" />

            <Label Text="Categoria" FontSize="Medium" Margin="0,10,0,0" />
            <Picker x:Name="CategoryPicker" Title="Selecione da categoria..." />

            <Button x:Name="BtnAbrirChamado"
                    Text="Enviar Chamado" 
                    Clicked="OnEnviarChamadoClicked"
                    BackgroundColor="#007bff" 
                    CornerRadius="8" 
                    Margin="0,20,0,0" />

            <ActivityIndicator x:Name="LoadingIndicator" IsRunning="False" IsVisible="False" Color="#007bff" />
            <Label x:Name="ResultLabel" FontSize="Small" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>