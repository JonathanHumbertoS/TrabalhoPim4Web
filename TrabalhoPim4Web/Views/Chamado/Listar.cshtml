@model List<TrabalhoPim4Web.Models.Chamado>

@{
    ViewData["Title"] = "Listagem de Chamados";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-controller="Chamado" asp-action="Criar" class="btn btn-primary">Abrir Novo Chamado</a>
</p>

@if (TempData["ErroDB"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErroDB"]
    </div>
}

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">Nenhum chamado foi encontrado no sistema.</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Título</th>
                <th>Descrição</th>
                <th>Status</th>
                <th>Data Abertura</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var chamado in Model)
            {
                <tr>
                    <td>@chamado.Id</td>
                    <td>@chamado.Titulo</td>
                    <td>@chamado.Descricao</td>
                    <td>
                        @{
                            // Define a classe CSS do status para cores visuais
                            string badgeClass = chamado.Status switch
                            {
                                "Aberto" => "badge text-bg-danger",
                                "Em Andamento" => "badge text-bg-warning",
                                "Fechado" => "badge text-bg-success",
                                _ => "badge text-bg-secondary"
                            };
                        }
                        <span class="@badgeClass">@chamado.Status</span>
                    </td>
                    <td>@chamado.DataAbertura.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        <a asp-controller="Chamado" asp-action="Detalhes" asp-route-id="@chamado.Id" class="btn btn-sm btn-info">Detalhes</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}