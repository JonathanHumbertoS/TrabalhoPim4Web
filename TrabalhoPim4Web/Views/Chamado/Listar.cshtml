@model IEnumerable<TrabalhoPim4Web.Models.Chamado>

@{
    ViewData["Title"] = "Lista de Chamados";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Lista de Chamados</h1>
    <p>
        <a asp-action="Criar" class="btn btn-primary btn-lg shadow">
            <i class="fas fa-plus-circle"></i> Novo Chamado
        </a>
    </p>
</div>

<table class="table table-striped table-hover table-sm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataAbertura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                Ações
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @item.DataAbertura.ToString("dd/MM/yyyy HH:mm")
                </td>
                <td>
                    @{
                        // Lógica C# para definir a cor do Badge com base no Status
                        string badgeClass = item.Status switch
                        {
                            "Aberto" => "bg-success", // Verde para chamados novos/abertos
                            "Em Andamento" => "bg-warning text-dark", // Amarelo para atenção
                            "Fechado" => "bg-secondary", // Cinza para chamados concluídos
                            _ => "bg-info" // Cor padrão
                        };
                    }
                    <span class="badge @badgeClass">
                        @Html.DisplayFor(modelItem => item.Status)
                    </span>
                </td>
                <td>
                    <a asp-action="Detalhes" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">Detalhes</a>
                    <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Deletar" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>