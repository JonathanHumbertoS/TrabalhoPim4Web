@model TrabalhoPim4Web.ViewModels.ChamadoFormViewModel

@{
    ViewData["Title"] = "Abrir Chamado";
}

<h1>Abrir Novo Chamado</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-controller="Chamado" asp-action="Criar" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Titulo" class="form-label"></label>
                <input asp-for="Titulo" class="form-control" id="inputTitulo" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Descricao" class="form-label"></label>
                <textarea asp-for="Descricao" class="form-control" rows="5" id="inputDescricao"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div id="areaSugestoes" class="card bg-info bg-opacity-10 border-info mb-3" style="display:none;">
                <div class="card-body p-3">
                    <h5 class="card-title text-primary">🧠 Sugestões Inteligentes (Apoio de IA)</h5>
                    <div id="listaSugestoes" class="card-text"></div>
                    <p class="mt-2 text-muted fst-italic mb-0" style="font-size: 0.85em;">Se a solução ajudou, por favor, não abra o chamado. Caso contrário, complete o formulário.</p>
                </div>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-success">Registrar Chamado</button>
                <a asp-controller="Chamado" asp-action="Listar" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(document).ready(function () {
            let sugestaoTimer; // Variável para controlar o debounce (atraso)

            // Monitora a digitação nos campos Título e Descrição
            $("#inputTitulo, #inputDescricao").on('keyup', function () {
                // Concatena os textos para dar mais contexto à IA
                var termoDigitado = $("#inputTitulo").val() + " " + $("#inputDescricao").val();

                clearTimeout(sugestaoTimer); // Limpa o timer anterior

                // Espera 300ms antes de chamar o servidor (otimização)
                sugestaoTimer = setTimeout(function() {
                    if (termoDigitado.trim().length >= 4) {
                        buscarSugestoes(termoDigitado.trim());
                    } else {
                        $("#areaSugestoes").hide();
                    }
                }, 300);
            });

            function buscarSugestoes(termo) {
                // Chamada AJAX Assíncrona para a Action do Controller
                $.ajax({
                    // URL CORRIGIDA PARA MINÚSCULAS para evitar o erro 404
                    url: '/chamado/buscarsugestoesia',
                    type: 'GET',
                    data: { termo: termo }, // Envia o texto digitado
                    success: function(data) {
                        var lista = $("#listaSugestoes");
                        lista.empty();

                        if (data && data.length > 0) {
                            $("#areaSugestoes").show();

                            // Itera sobre as sugestões JSON retornadas
                            $.each(data, function (i, sugestao) {
                                // Assume que o JSON retorne: { palavraChave: "...", solucao: "..." }
                                lista.append('<p class="mb-1" style="font-size: 0.9em;"><strong>' + sugestao.palavraChave + ':</strong> ' + sugestao.solucao + '</p>');
                            });

                        } else {
                            $("#areaSugestoes").hide(); // Esconde se não houver sugestões
                        }
                    },
                    error: function() {
                        // Ocorre se houver erro 500 no C# ou falha de conexão
                        console.error("Erro no AJAX. Verifique a Action BuscarSugestoesIA.");
                        $("#areaSugestoes").hide();
                    }
                });
            }
        });
    </script>
}